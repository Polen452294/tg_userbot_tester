# Получить тут: https://my.telegram.org → API development tools
TG_API_ID=
TG_API_HASH=

# Имя session файла (создаст TG_SESSION_NAME.session рядом с проектом)
TG_SESSION_NAME=me

# Username бота для парсинга (можно с @)
BOT_USERNAME=@search991_bot

# Таймаут ожидания ответа от бота (сек)
DEFAULT_TIMEOUT=20

# Логи
LOG_LEVEL=INFO

# ===== Proxy (Bot API) bot =====
CONTROL_BOT_TOKEN=

# (опционально) если хочешь, чтобы бот отвечал только в личке
CONTROL_PRIVATE_ONLY=1

# ===== Stability / limits =====
SEND_DELAY_MIN=0.15
SEND_DELAY_MAX=0.45

RATE_MAX_ACTIONS=15
RATE_WINDOW_SECONDS=60

FLOODWAIT_BUFFER_SECONDS=2
PEERFLOOD_COOLDOWN_SECONDS=21600

# ===== Cache =====
CACHE_DB_PATH=./.cache.sqlite3
CACHE_TTL_SECONDS=21600

# ===== Proxy per-user quota =====
USER_QUOTA_PER_HOUR=30

# ===== Queue =====
QUEUE_MAXSIZE=200